<%= form_tag("/soundcloud", method: "get") do %>
<%= hidden_field :search, value: @query %>
<%= submit_tag "try another random song", :class => "submit_button2" %>
<% end %>

<%= @embed_info['html'].html_safe %>

<% if @current_user %>
    <%= form_for @song, :url => "/songs", :method => :post, :class => "button2" do |s| %>
        <%= hidden_field_tag :song_id, @sample["id"], :required => true %>
        <%= submit_tag "Save this song" , :class => "submit_button2"%>
    <% end %>
<% end %>
